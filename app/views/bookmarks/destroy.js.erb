var tweet = $('#tweets-container').find(".tweet[data-tweeturl='<%= tweet.link %>']");

tweet.fadeOut('slow', function() {
  tweet.remove();
  if(!$('.tweet').length) {
    $("<%= j render 'no_bookmarks' %>").appendTo($('#tweets-container')).fadeIn('slow');
  }
});

toastr.info("<%= t('controllers.folders.tweet.deleted', folder: folder.name).html_safe %>")

$('#tweetsCount').html("<%= pluralize_bookmarks_count(folder) %>")