<div class="position-fixed application-mode">
  <% if cookies[:sun] %>
    <%= link_to moon_path, method: :get, 
      data: { 
        mode: 'light',
        'tippy-content': 'Switch application to dark mode',
        'tippy-placement': 'right'
      } do %>
      <i class="fas fa-moon fa-lg"></i>
    <% end %>   
  <% else %>
    <%= link_to sun_path, method: :get, 
      data: { 
        mode: 'dark',
        'tippy-content': 'Switch application to light mode',
        'tippy-placement': 'right'
      } do %>
      <i class="fas fa-sun fa-lg"></i>
    <% end %>
  <% end %>
</div>

<%= link_to '#', 
  class: 'btn btn-primary position-fixed back-to-top invisible',
  data: { 'tippy-content': 'Go back to top', 'tippy-placement': 'right'} do %>
  <i class="fas fa-arrow-up"></i>
<% end %>