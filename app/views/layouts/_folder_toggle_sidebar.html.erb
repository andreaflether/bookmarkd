<div class="border-right position-fixed folder-menu expanded">
  <p class="font-weight-bold mb-1 actions px-3">Actions</p>
  <div class="list-group">
    <%= link_to folders_path, class: 'list-group-item list-group-item-action' do %>
      <i class="fas fa-folder-open text-brand mr-2"></i> All folders
    <% end %>
    <%= link_to new_folder_path, class: 'list-group-item list-group-item-action' do %>
      <i class="fas fa-folder-plus text-brand mr-2"></i> <%= t('content.actions.folders.new') %>
    <% end %>
  </div>
  <hr />
  <p class="font-weight-bold mb-2 px-3">Quick access</p> 
  <%= form_with url: search_folders_path, 
    local: true, 
    html: { autocomplete: :off, class: 'px-3 mb-4' },
    method: :get do |form| %>
    <%= form.text_field :q, placeholder: 'Type a folder name...', data: { behavior: 'autocomplete' },
      class: 'form-control', id: 'sidebar-folder-search' %>
  <% end %>
  <hr />
  <p class="font-weight-bold mb-1 px-3">Pinned</p>
  <div class="list-group" id="pinned-folders">
    <% if @pinned.size >= 1 %>
        <%= render partial: 'folders/shared/pinned', collection: @pinned %>
    <% else %>
      <div class="no-pinned-folders text-muted px-3 small">
        <p class="mb-1 font-weight-bold mt-2 ">You haven’t pinned any Folders yet.</p>
        <p>When you do, it’ll show up here.</p>
      </div>
    <% end %>
  </div>   
  <div class="position-fixed d-flex align-items-center border-right border-top toggle-fixed">
    <% if user_signed_in? %>
      <div class="position-fixed folder-sidebar">
        <a id="toggle-sidebar" 
          class="link-brand" 
          data-tippy-content="Toggle folder sidebar" 
          data-tippy-placement="left"
        >
          <i class="fas fa-folder-open fa-2x"></i>
        </a>
      </div>
    <% end %>
  </div>
</div>