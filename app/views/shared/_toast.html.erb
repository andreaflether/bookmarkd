<div style="position: absolute; top: 0; right: 0;">
  <% flash.each do |type, msg| %>
  <div class="toast mr-3 mt-3" role="alert" aria-live="assertive" aria-atomic="true" data-delay=10000>
      <div class="toast-header">
        <strong class="mr-auto <%= type == 'alert' ? 'text-danger' : 'text-success' %>">
          <% if type == 'alert' %>
            <i class="fas fa-exclamation-triangle"></i>&nbsp; Alert
          <% else %>
            <i class="fas fa-check-circle"></i>&nbsp; Success!
          <% end %>
        </strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        <%= msg %>
      </div>
    </div>
  <% end %>
</div>