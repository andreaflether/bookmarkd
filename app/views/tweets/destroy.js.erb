let tweet = $('#tweets-container').find(".tweet[data-tweeturl='<%= tweet.link %>']");

tweet.fadeOut('slow', function() {
  tweet.remove();
});

toastr.success("Tweet successfully removed from <b><%= folder.name %></b>.")

$('#tweetsCount').text("<%= j pluralize(folder.tweets.count, 'tweet') %>")

<% if folder.tweets.count == 0 %>
  $("<h5 class='text-center text-brand font-weight-normal mt-2' id='no-tweets'>This folder is empty. Add tweets to see them here!</h5>").appendTo($('#tweets-container')).fadeIn('slow');
<% end %>