<div class="d-flex justify-content-between tweet" data-tweetURL="<%= tweet.link %>">
  <%= raw tweet.html_content %>
  <div class="d-flex flex-column mt-1">
    <div>
      <small class="text-white-50 d-flex align-items-center">
        <i class="far fa-clock ml-2"></i>
        <span class="ml-2">
          <%= tweet.created_at.strftime("%d/%m/%Y") %>
        </span>
      </small>
    
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <%= button_tag(
        type: 'button', 
        class: 'btn btn-transparent d-flex copyTweetLink',
        title: 'Copy tweet URL to clipboard',
        data: { 
          toggle: 'tooltip'
        }) do %>
        <i class="fas fa-copy mt-2 ml-2 text-light"></i>
      <% end %>
      <%= link_to folder_tweet_path(@folder, tweet), 
        method: :delete, 
        remote: true,
        class: 'text-danger',
        title: 'Delete tweet from folder',
        data: { 
          toggle: 'tooltip',
          confirm: 'Are you sure?'
        } do %>
        <i class="fas fa-trash-alt mt-2 mx-2"></i>
      <% end %>
    </div>
  </div>
</div>