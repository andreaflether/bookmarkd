<div class="d-flex justify-content-between" data-tweetURL="<%= tweet.link %>">
  <%= raw tweet.html_content %>
  <div class="d-flex flex-column">
    <div>
      <small class="text-white-50 d-flex align-items-center">
        <i class="far fa-clock ml-2"></i>
        <span class="ml-2">
          <%= tweet.created_at.strftime("%d/%m/%Y") %>
        </span>
      </small>
    
    </div>
    <div class="d-flex align-items-center justify-content-center">
      <%= button_tag(
        type: 'button', 
        class: 'btn btn-transparent d-flex copyTweetLink',
        data: { 
          'tippy-content': 'Copy tweet URL to clipboard', 
          'tippy-arrow': 'false',
          'tippy-theme': 'translucent',
          'tippy-placement': 'bottom'
        }) do %>
        <i class="fas fa-copy mt-2 ml-2 text-light "></i>
      <% end %>
      <%= link_to tweet_path(tweet), 
        method: :delete, 
        data: { confirm: 'Are you sure?' }, 
        class: 'text-danger',
        data: { 
          'tippy-content': 'Delete tweet from this folder', 
          'tippy-arrow': 'false',
          'tippy-theme': 'translucent',
          'tippy-placement': 'bottom'
        } do %>
        <i class="fas fa-trash-alt mt-2 mx-2"></i>
    
    </div>
  
  </div>
  <% end %>

</div>