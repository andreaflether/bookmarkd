<div class="card folder shadow-lg border-0" 
  data-folder-id="<%= folder.id %>" 
  data-pinned="<%= is_pinned(folder) %>"
>
  <div class="card-body">
    <h5 class="folder-title card-title d-flex align-items-center justify-content-between mb-1">
      <%= link_to folder.name, folder, class: 'link-brand font-weight-bold' %>
      <%= link_to toggle_pin_url(folder), 
        method: :put,  
        remote: true,
        class: is_pinned(folder) ? 'link-brand' : 'pin-folder-icon',
        data: { 
          'tippy-content': "#{is_pinned(folder) ? 'Unpin' : 'Pin'} this folder"
        } do %>
        <i class="fas fa-thumbtack fa-xs"></i>
      <% end %>
    </h5>
    <p class="card-subtitle font-weight-bold text-black-50 small mt-2 mb-3">
      <i class="far fa-clock"></i>  
      <span class="text-muted font-weight-normal">last updated</span>
      <%= time_ago_in_words(folder.updated_at) %> ago
    </p>
    <p class="card-text folder-desc small">
      <%= folder_description(folder.description) %>
      <span class="text-brand font-weight-bold">
        <%= pluralize(folder.tweets_count, 'tweet') %>
      </span>
    </p>
    
    <%= link_to edit_folder_path(folder), 
      class: 'btn btn-outline-primary btn-sm edit',
      data: { 
        'tippy-content': 'Edit folder info',
        'tippy-placement': 'left' 
      } do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to folder_path(folder), 
      method: :delete, 
      data: { 
        confirm: t('delete_folder_confirmation', 
        tweet_count: pluralize(folder.tweets_count, 'tweet')),
        'tippy-content': "Delete folder: #{folder.name}",
        'tippy-placement': 'right'
      }, 
      class: 'btn btn-outline-danger delete btn-sm' do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>