
<div class="col-md-12 text-center mt-3">
  <h2 class="text-brand mb-0"><%= @folder.name %> </h2>
</div>
<div class="col-md-5 text-center">
  <% if @folder.description.present? %>
    <small class="text-white-50"><%= @folder.description %></small>
  <% end %>
  <p class="mt-2">by 
    <span class="font-weight-bold"><%= current_user.username%></span>
  </p>
</div>
<div class="w-100"></div>

<div class="col-md-7 mt-3">
  <%= simple_form_for @folder, remote: true do |f| %>
    <%= f.simple_fields_for :tweets, @folder.tweets.build do |t| %>
      <% t.input :link, 
        label: false,
        wrapper: :input_group do %>
        <%= t.input :link, 
          label: false, 
          wrapper: false, 
          input_html: { 
            id: 'tweetUrl',
            placeholder: 'https://twitter.com/trishapaytas/status/896147447105245184'
          } %>
        <div class="input-group-append">   
          <%= f.button :submit, 'Add', class: 'btn btn-brand' %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="w-100"></div>

  <% if @tweets.blank? %>
    <h5 class="text-center text-brand font-weight-normal">
      This folder is empty. Add tweets to see them here!
    </h5>
  <% else %>
    <div class="col-md-12 mb-4">
      <h6 class="text-center text-brand">Search filters</h6>
    </div>
    <div class="col-md-7 text-center mt-3" id="tweets-container">
      <%= render @tweets %>
  <% end %>
</div>