
<div class="col-md-12">
  <h2 class="text-center mb-4">Folders</h2>
</div>

<% if @folders.blank? %>
  <div class="col-md-7 text-center">
    <h5>You havenâ€™t created any Folders yet</h5>
    <p class="text-white-50">Create one to see it here ğŸ‘€</p>

    <%= link_to 'Create a Folder', new_folder_path, class: 'btn btn-brand mt-1' %>
  </div>
<% else %>
  <div class="col-md-3">
    <div class="list-group">
      <% @folders.each do |folder| %>
        <%= link_to folder, class: 'list-group-item list-group-item-action' do %>

          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1 text-brand"><%= folder.name %></h5>
            <small><%= folder.tweets.count %> tweets</small>
          </div>
          
          <small>Updated at <%= folder.updated_at.strftime("%mm %d, %Y") %></small>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

