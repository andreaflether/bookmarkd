
<div class="col-md-12">
  <h2 class="text-center mb-3">Folders</h2>
</div>

<div class="col-md-6">
  <div class="input-group no-shadow mb-3">
    
    <span class="icon-inside text-muted bg-white" id="search-icon">
      <i class="fas fa-search"></i>
    </span>
    
    <input type="text" 
      placeholder="Search in folders" 
      class="form-control rounded"
      id="search-folder" 
      maxlength=50
    >
    <span class="icon-inside text-muted d-none bg-white" id="remove-search">
      <i class="fas fa-times-circle"></i>
    </span>
    
  </div>
</div>
<div class="w-100"></div>

<% if @folders.blank? %>
  <div class="col-md-7 my-3 text-center">
    <h5>You havenâ€™t created any Folders yet</h5>
    <p class="text-white-50">Create one to see it here ğŸ‘€</p>

    <%= link_to 'Create a Folder', new_folder_path, class: 'btn btn-brand mt-1' %>
  </div>
<% else %>
<div class="col-9">
  <div class="card-columns mt-4" id="folders">
    <%= render @folders %>
  </div>
  <div class="no-results text-light text-center">
    <h5 class="font-weight-normal">No results found for 
      "<b><span class="text-brand" id="searchTerm"></span></b>".
    </h5>
  </div>
</div>
<% end %>

