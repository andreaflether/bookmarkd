<div class="col-md-12">
  <h2 class="text-center mb-3">Folders</h2>
</div>

<div class="col-lg-6 col-md-9 col-sm-12">
  <div class="input-group mb-3">
    <span class="icon-inside text-muted" id="search-icon">
      <i class="fas fa-search"></i>
    </span>
    
    <input type="text" 
      placeholder="Search in folders" 
      class="form-control rounded hasToggledIcon"
      id="search-folder" 
      maxlength=50
    >
    <span class="icon-inside text-muted d-none" id="remove-search">
      <i class="fas fa-times-circle"></i>
    </span>
  </div>
</div>

<div class="w-100"></div>

<div class="col-md-6 col-sm-12 text-center">
  <div class="btn-group sort-by-button-group" role="group">
    <%= sort_by_template('Last update', 'original-order') %>
    <%= sort_by_template('Name', 'name') %>
    <%= sort_by_template('No. of tweets', 'number_of_tweets') %>
  </div>
</div>

<% if @folders.total_pages > 1 %>
  <div class="col-md-12 col-lg-7 mt-2 mb-0" 
    id="pagination"
  >
    <%= paginate @folders, 
      theme: 'twitter-bootstrap-4',
      pagination_class: 'pagination-sm justify-content-center'
    %>
  </div>
<% end %>

<div class="col-9 mt-3 no-results text-muted text-center">
    <h5 class="font-weight-normal">No results found for 
      "<b><span class="text-brand" id="searchTerm"></span></b>".
    </h5>
  </div>
<% if @folders.blank? %>
  <div class="col-lg-7 col-md-12 col-sm-12 my-3 text-muted text-center">
    <h2>¯\_(ツ)_/¯</h2>
    <p class=" mt-3">
      You don’t have any folders yet. <br />
      <b>Create one to get started.</b>
    </p>

    <%= link_to 'Create a Folder', new_folder_path, class: 'btn btn-brand mt-1' %>
  </div>
<% else %>

<div class="col-md-12 col-lg-9">
  <div class="row mt-4" id="folders" data-sort-by="<%= current_user.order_folders_by %>">
    <%= render @folders %>
  </div>
</div>
<% end %>