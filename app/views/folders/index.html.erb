
<div class="col-md-12">
  <h2 class="text-center mb-3">Folders</h2>
</div>

<div class="col-md-6">
  <div class="input-group no-shadow mb-3">
    
    <span class="icon-inside text-muted" id="search-icon">
      <i class="fas fa-search"></i>
    </span>
    
    <input type="text" 
      placeholder="Search in folders" 
      class="form-control rounded hasToggledIcon"
      id="search-folder" 
      maxlength=50
    >
    <span class="icon-inside text-muted d-none" id="remove-search">
      <i class="fas fa-times-circle"></i>
    </span>
    
  </div>
</div>
<div class="w-100"></div>

<% if @folders.blank? %>
  <div class="col-lg-7 col-md-12 col-sm-12 my-3 text-white-50 text-center">
    <h2>¯\_(ツ)_/¯</h2>
    <p class=" mt-3">
      You don’t have any folders yet. <br />
      <b>Create one to get started.</b>
    </p>

    <%= link_to 'Create a Folder', new_folder_path, class: 'btn btn-brand mt-1' %>
  </div>
<% else %>
<div class="col-9">
  <div class="card-columns mt-4" id="folders">
    <%= render @folders %>
  </div>
  <div class="no-results text-light text-center">
    <h5 class="font-weight-normal">No results found for 
      "<b><span class="text-brand" id="searchTerm"></span></b>".
    </h5>
  </div>
</div>
<% end %>

