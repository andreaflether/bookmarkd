<div class="col-xl-5 col-lg-6 col-md-9 rounded bg-custom justify-content-center">
  <h3 class="text-center"><%= t('content.actions.users.sessions.new') %></h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email, autofocus: true, autocomplete: 'email' %>
   
    <%= f.input :password, 
      wrapper: :input_group,
      autocomplete: 'current-password',
      input_html: { data: { toggle: 'password' } } 
    %>

    <div class="d-flex justify-content-between">
      <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean, wrapper: :custom_boolean %>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div>
          <%= link_to t('content.actions.users.passwords.new'), new_password_path(resource_name) %>
        </div>
      <% end %> 
    </div>

    <div class="actions">
      <%= f.button :submit, 
        t('content.actions.users.sessions.new'), 
        class: 'btn btn-primary w-100 mt-1 mb-4' 
      %>
    </div>

    <%= render 'devise/shared/links' %>
  <% end %>
</div>

