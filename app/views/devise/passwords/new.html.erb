<div class="col-xl-5 col-lg-6 col-md-9 rounded bg-custom justify-content-center">
  <h3 class="text-center mb-4"><%= t('content.actions.users.passwords.new') %></h3>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <%= f.input :email, autofocus: true, autocomplete: 'email', required: true %>

    <div class="actions">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary w-100 mb-4 mt-1' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
