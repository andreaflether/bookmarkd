<div class="col-md-5 rounded bg-custom p-5 justify-content-center">
  <h3 class="text-center mb-3">Forgot your password?</h3>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <%= f.input :email, autofocus: true, autocomplete: 'email', required: true %>

    <div class="actions">
      <%= f.submit 'Send me reset password instructions', class: 'btn btn-brand w-100 mb-3' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
