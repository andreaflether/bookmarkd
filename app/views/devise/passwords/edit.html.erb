<div class="col-xl-5 col-lg-6 col-md-9 rounded bg-custom justify-content-center">
  <h3 class="text-center mb-4"><%= t('content.actions.users.passwords.edit') %></h3>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, 
      label: 'New password',
      required: true,
      wrapper: :input_group, 
      autofocus: true, 
      autocomplete: 'new-password',
      hint: "#{@minimum_password_length} characters minimum.",
      input_html: { data: { toggle: 'password' } }
    %>

    <%= f.input :password_confirmation,
      required: true,
      wrapper: :input_group, 
      label: 'Confirm new password', 
      autocomplete: 'new-password',
      input_html: { data: { toggle: 'password' } } 
    %>

    <%= f.button :submit, t('content.actions.users.passwords.edit'), class: 'btn btn-primary w-100 mb-4 mt-1' %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>


