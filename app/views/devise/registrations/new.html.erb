<div class="col-xl-5 col-lg-6 col-md-9 rounded bg-custom justify-content-center">
  <h3 class="text-center"> <%= t('content.actions.users.registrations.new') %></h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <%= f.input :name, 
      required: true,
      autofocus: true, 
      maxlength: 50,
      autocomplete: 'name',
      input_html: { class: 'has-max-length' } 
    %>

    <%= f.input :username, 
      required: true,
      autofocus: true, 
      maxlength: 15,
      autocomplete: 'username',
      input_html: { class: 'has-max-length' } 
    %>

    <%= f.input :email, 
      autocomplete: 'email', 
      required: true 
    %>

    <%= f.input :password, 
      wrapper: :input_group,
      required: true,
      autocomplete: 'new-password', 
      hint: "#{@minimum_password_length} characters minimum.",
      input_html: { data: { toggle: 'password' } } 
    %>

    <div class="text-center my-4">
      <%= f.input :terms, as: :boolean, wrapper: :custom_boolean, 
        label: "I accept the 
          #{link_to 'Terms of Service', terms_of_service_path, class: 'link-brand', target: '_blank' } 
          and #{link_to 'Privacy Policy', privacy_policy_path, class: 'link-brand', target: '_blank' }".html_safe 
      %>
    </div>

    <div class="actions">
      <%= f.button :submit, 
        t('content.actions.users.registrations.new'), 
        class: 'btn btn-brand w-100 mb-4' 
      %>
    </div>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>
