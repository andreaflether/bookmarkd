<div class="col-md-5 rounded bg-custom p-5 justify-content-center">
<h3 class="text-center">Sign up</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <%= f.input :name, 
    required: true,
    input_html: { maxlength: 50 } 
  %>

  <%= f.input :email, 
    autofocus: true, 
    autocomplete: 'email', 
    required: true 
  %>

  <%= f.input :password, 
    wrapper: :input_group,
    required: true,
    autocomplete: 'new-password', 
    hint: "#{@minimum_password_length} characters minimum.",
    input_html: { data: { toggle: 'password' } } 
  %>
    
  <%= f.input :password_confirmation, 
    wrapper: :input_group,
    required: true, 
    autocomplete: 'new-password', 
    input_html: { data: { toggle: 'password' } }
  %>

  <div class="actions">
    <%= f.button :submit, 'Sign up', class: 'btn btn-brand w-100 mb-3' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
