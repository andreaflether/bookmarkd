<div class="text-center">
  <%- if controller_name != 'sessions' %>
    <p class="mb-1">
      <span class="text-muted">Already have an account? </span>
      <b><%= link_to t('content.actions.users.sessions.new'), new_session_path(resource_name) %></b>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mb-1">
      <b><%= link_to t('content.actions.users.registrations.new'), new_registration_path(resource_name) %></b>
      <span class="text-muted">for a new account </span>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="d-flex align-items-center mt-2 mb-2">
      <div class="flex-fill"><hr /></div>
      <div class="px-3">
        <small class="text-uppercase text-muted">or</small>
      </div>
      <div class="flex-fill"><hr /></div>
    </div>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'mb-0' do %> 
        <span class="link-brand">
          <i class="fab fa-twitter"></i>
        <b><%= t('content.actions.users.omniauth.new', provider: OmniAuth::Utils.camelize(provider)) %></b>
        </span>
      <% end %>
    <% end %>
  <% end %>
</div>

