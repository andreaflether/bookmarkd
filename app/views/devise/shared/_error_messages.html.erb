<% if resource.errors.any? %>
<div class="mt-3 alert border-0 alert-danger alert-dismissible fade show" id="error_explanation" role="alert">
    <p class="text-center mb-0">
      <%= raw t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </p>
  <button type="button" class="close text-muted" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
